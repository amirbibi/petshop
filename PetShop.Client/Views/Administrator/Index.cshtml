
@{
    ViewData["Title"] = "Administrator";
}
<link href="~/styles/all.min.css" rel="stylesheet" />

<div class="card mb-4 border-2" style="border-color: #ff6347;">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <span class="fs-5 fw-semibold m-2">Please select a category: </span>
                <select id="categoryDropdown" class="form-select form-select-sm d-inline-block w-auto">
                    <option value="All" selected>All</option>
                    @foreach (var category in @ViewBag.Categories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
            </div>
            <a class="btn btn-dark fw-semibold" asp-action="Index" asp-controller="NewAnimal">Add New</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Portrait</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Description</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var animal in Model)
                {
                    <tr data-category="@animal.CategoryId">
                        <td><img src="~/images/animals/@animal.PictureName" alt="@animal.Name" width="100px" height="80px" /></td>
                        <td>@animal.Name</td>
                        <td>@animal.Age</td>
                        <td>@animal.Description</td>
                        <td>
                            <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@animal.AnimalId">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@animal.AnimalId">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


